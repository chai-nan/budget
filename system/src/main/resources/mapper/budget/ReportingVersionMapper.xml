<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.cmkj.budget.mapper.ReportingVersionMapper">

    <resultMap type="ReportingVersion" id="ReportingVersionResult">
            <result property="id"    column="id"    />
            <result property="name"    column="name"    />
            <result property="status"    column="status"    />
            <result property="year"    column="year"    />
            <result property="taskId"    column="task_id"    />
            <result property="createBy"    column="create_by"    />
            <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectReportingVersionVo">
        SELECT t.id,t.NAME,t.STATUS,t.YEAR,t.task_id,t.create_by,t.create_time,r.name as taskName
        FROM t_reporting_version t
        LEFT JOIN t_reporting_task r ON t.task_id = r.id
    </sql>

    <select id="selectReportingVersionList" parameterType="ReportingVersion" resultMap="ReportingVersionResult">
        <include refid="selectReportingVersionVo"/>
        <where>
            <if test="name != null  and name != ''"> and t.name like concat('%', #{name}, '%')</if>
            <if test="status != null "> and t.status = #{status}</if>
            <if test="year != null  and year != ''"> and t.year = #{year}</if>
            <if test="taskId != null "> and t.task_id = #{taskId}</if>
        </where>
        order by t.create_time desc
    </select>

    <select id="selectReportingVersionById" parameterType="Long" resultMap="ReportingVersionResult">
            <include refid="selectReportingVersionVo"/>
            where t.id = #{id}
    </select>

    <select id="lastList" parameterType="ReportingVersion" resultMap="ReportingVersionResult">
        SELECT  t.id,t.name,t.status,t.year,t.task_id,t.create_by,t.create_time,r.name as taskName
        FROM t_reporting_version t
        INNER JOIN (
            SELECT task_id, MAX(create_time) as max_create_time
            FROM t_reporting_version
            GROUP BY task_id
        ) latest ON t.task_id = latest.task_id AND t.create_time = latest.max_create_time
        LEFT JOIN t_reporting_task r ON t.task_id = r.id
        <if test="name != null  and name != ''"> and t.name like concat('%', #{name}, '%')</if>
        <if test="status != null "> and t.status = #{status}</if>
        <if test="year != null  and year != ''"> and t.year = #{year}</if>
        <if test="taskId != null "> and t.task_id = #{taskId}</if>
    </select>

    <select id="selectLastVersion" resultMap="ReportingVersionResult">
        <include refid="selectReportingVersionVo"/>
        ORDER BY create_time desc LIMIT 1
    </select>

    <insert id="insertReportingVersion" parameterType="ReportingVersion" useGeneratedKeys="true" keyProperty="id">
        insert into t_reporting_version
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="status != null">status,</if>
            <if test="year != null">year,</if>
            <if test="taskId != null">task_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="status != null">#{status},</if>
            <if test="year != null">#{year},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateReportingVersion" parameterType="ReportingVersion">
        update t_reporting_version
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="status != null">status = #{status},</if>
            <if test="year != null">year = #{year},</if>
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteReportingVersionById" parameterType="Long">
        update t_reporting_version set del_flag = '2'  where id = #{id}
    </delete>

    <delete id="deleteReportingVersionByIds" parameterType="String">
        update t_reporting_version set del_flag = '2'  where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>