<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.cmkj.budget.mapper.BudgetWarningMapper">

    <resultMap type="BudgetWarning" id="BudgetWarningResult">
        <result property="id"    column="id"    />
        <result property="taskId"    column="task_id"    />
        <result property="versionId"    column="version_id"    />
        <result property="type"    column="type"    />
        <result property="itemIds"    column="item_ids"    />
        <result property="startTime"    column="start_time"    />
        <result property="proportion"    column="proportion"    />
        <result property="remind"    column="remind"    />
        <result property="lastTime"    column="last_time"    />
        <result property="status"    column="status"    />
        <result property="subjects"    column="subjects"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="itemName"    column="item_name"    />
        <result property="companyId"    column="company_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="pendingReviewDays"    column="pending_review_days"    />
    </resultMap>

    <sql id="selectBudgetWarningVo">
        SELECT
            t.id,t.task_id,t.type,t.item_ids,t.start_time,t.last_time,t.proportion,t.`status`,t.subjects,t.remind,t.version_id,t.del_flag,t.create_by,t.create_time,t.update_by,t.item_name,t.company_id,t.dept_id,t.pending_review_days,t.update_time,k.`name` as taskName
        FROM t_budget_warning t
        LEFT JOIN t_reporting_task k on t.task_id = k.id
    </sql>

    <select id="selectBudgetWarningList" parameterType="BudgetWarning" resultMap="BudgetWarningResult">
        <include refid="selectBudgetWarningVo"/>
            where t.del_flag = '0'
            <if test="taskId != null "> and t.task_id = #{taskId}</if>
            <if test="type != null "> and t.type = #{type}</if>
            <if test="proportion != null "> and t.proportion = #{proportion}</if>
            <if test="remind != null "> and t.remind = #{remind}</if>
            <if test="status != null "> and t.status = #{status}</if>
             order by t.create_time desc
    </select>

    <select id="selectBudgetWarningById" parameterType="Long" resultMap="BudgetWarningResult">
        <include refid="selectBudgetWarningVo"/>
        where t.id = #{id}
    </select>

    <insert id="insertBudgetWarning" parameterType="BudgetWarning" useGeneratedKeys="true" keyProperty="id">
        insert into t_budget_warning
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null">task_id,</if>
            <if test="versionId != null">version_id,</if>
            <if test="type != null">type,</if>
            <if test="itemIds != null">item_ids,</if>
            <if test="startTime != null">start_time,</if>
            <if test="proportion != null">proportion,</if>
            <if test="remind != null">remind,</if>
            <if test="lastTime != null">last_time,</if>
            <if test="status != null">status,</if>
            <if test="subjects != null">subjects,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="itemName != null">item_name,</if>
            <if test="companyId != null">company_id,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="pendingReviewDays != null">pending_review_days,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null">#{taskId},</if>
            <if test="versionId != null">#{versionId},</if>
            <if test="type != null">#{type},</if>
            <if test="itemIds != null">#{itemIds},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="proportion != null">#{proportion},</if>
            <if test="remind != null">#{remind},</if>
            <if test="lastTime != null">#{lastTime},</if>
            <if test="status != null">#{status},</if>
            <if test="subjects != null">#{subjects},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="itemName != null">#{itemName},</if>
            <if test="companyId != null">#{companyId},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="pendingReviewDays != null">#{pendingReviewDays},</if>
        </trim>
    </insert>

    <update id="updateBudgetWarning" parameterType="BudgetWarning">
        update t_budget_warning
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="versionId != null">version_id = #{versionId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="itemIds != null">item_ids = #{itemIds},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="proportion != null">proportion = #{proportion},</if>
            <if test="remind != null">remind = #{remind},</if>
            <if test="lastTime != null">last_time = #{lastTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="subjects != null">subjects = #{subjects},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="itemName != null">item_name = #{itemName},</if>
            <if test="companyId != null">company_id = #{companyId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="pendingReviewDays != null">pending_review_days = #{pendingReviewDays},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBudgetWarningById">
        update t_budget_warning
        set del_flag = '2' , update_by = #{userName}, update_time = SYSDATE()
        where id = #{id}
    </delete>

    <delete id="deleteBudgetWarningByIds">
        update t_budget_warning
        set del_flag = '2' , update_by = #{userName}, update_time = SYSDATE()
        where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>