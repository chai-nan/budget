<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.cmkj.budget.mapper.BudgetWarningInfoMapper">

    <resultMap type="BudgetWarningInfo" id="BudgetWarningInfoResult">
        <result property="id"    column="id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="deptName"    column="dept_name"    />
        <result property="parentId"    column="parent_id"    />
        <result property="parentName"    column="parent_name"    />
        <result property="taskId"    column="task_id"    />
        <result property="taskName"    column="task_name"    />
        <result property="actualMoney"    column="actual_money"    />
        <result property="budgetMoney"    column="budget_money"    />
        <result property="proportion"    column="proportion"    />
        <result property="type"    column="type"    />
        <result property="message"    column="message"    />
        <result property="subjectId"    column="subject_id"    />
        <result property="subjectName"    column="subject_name"    />
        <result property="createdTime"    column="created_time"    />
        <result property="status"    column="status"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectBudgetWarningInfoVo">
        select id, dept_id, dept_name, parent_id, parent_name, task_id, task_name, actual_money, budget_money, proportion, type, message, subject_id, subject_name, created_time, status, update_by, update_time, del_flag
        from t_budget_warning_info
    </sql>

    <select id="selectBudgetWarningInfoList" parameterType="BudgetWarningInfo" resultMap="BudgetWarningInfoResult">
        <include refid="selectBudgetWarningInfoVo"/>
            where del_flag = '0'
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="deptName != null  and deptName != ''"> and dept_name like concat('%', #{deptName}, '%')</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="parentName != null  and parentName != ''"> and parent_name like concat('%', #{parentName}, '%')</if>
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="taskName != null  and taskName != ''"> and task_name like concat('%', #{taskName}, '%')</if>
            <if test="actualMoney != null "> and actual_money = #{actualMoney}</if>
            <if test="budgetMoney != null "> and budget_money = #{budgetMoney}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="message != null  and message != ''"> and message = #{message}</if>
            <if test="subjectId != null "> and subject_id = #{subjectId}</if>
            <if test="subjectName != null  and subjectName != ''"> and subject_name like concat('%', #{subjectName}, '%')</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="queryDays != null "> and created_time >= DATE_SUB(CURRENT_DATE(), INTERVAL #{queryDays} DAY) </if>
             order by created_time desc
    </select>

    <select id="selectBudgetWarningInfoById" parameterType="Long" resultMap="BudgetWarningInfoResult">
            <include refid="selectBudgetWarningInfoVo"/>
            where id = #{id}
    </select>

    <insert id="insertBudgetWarningInfo" parameterType="BudgetWarningInfo" useGeneratedKeys="true" keyProperty="id">
        insert into t_budget_warning_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deptId != null">dept_id,</if>
            <if test="deptName != null">dept_name,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="parentName != null">parent_name,</if>
            <if test="taskId != null">task_id,</if>
            <if test="taskName != null">task_name,</if>
            <if test="actualMoney != null">actual_money,</if>
            <if test="budgetMoney != null">budget_money,</if>
            <if test="proportion != null">proportion,</if>
            <if test="type != null">type,</if>
            <if test="message != null">message,</if>
            <if test="itemId != null">item_id,</if>
            <if test="itemName != null">item_name,</if>
            <if test="subjectId != null">subject_id,</if>
            <if test="subjectName != null">subject_name,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deptId != null">#{deptId},</if>
            <if test="deptName != null">#{deptName},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="parentName != null">#{parentName},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="taskName != null">#{taskName},</if>
            <if test="actualMoney != null">#{actualMoney},</if>
            <if test="budgetMoney != null">#{budgetMoney},</if>
            <if test="proportion != null">#{proportion},</if>
            <if test="type != null">#{type},</if>
            <if test="message != null">#{message},</if>
            <if test="itemId != null">#{itemId},</if>
            <if test="itemName != null">#{itemName},</if>
            <if test="subjectId != null">#{subjectId},</if>
            <if test="subjectName != null">#{subjectName},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
        </trim>
    </insert>

    <update id="updateBudgetWarningInfo" parameterType="BudgetWarningInfo">
        update t_budget_warning_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="deptName != null">dept_name = #{deptName},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="parentName != null">parent_name = #{parentName},</if>
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="taskName != null">task_name = #{taskName},</if>
            <if test="actualMoney != null">actual_money = #{actualMoney},</if>
            <if test="budgetMoney != null">budget_money = #{budgetMoney},</if>
            <if test="proportion != null">proportion = #{proportion},</if>
            <if test="type != null">type = #{type},</if>
            <if test="message != null">message = #{message},</if>
            <if test="itemId != null">item_id = #{itemId},</if>
            <if test="itemName != null">item_name = #{itemName},</if>
            <if test="subjectId != null">subject_id = #{subjectId},</if>
            <if test="subjectName != null">subject_name = #{subjectName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBudgetWarningInfoById">
        update t_budget_warning_info
        set del_flag = '2' , update_by = #{userName}, update_time = SYSDATE()
        where id = #{id}
    </delete>

    <delete id="deleteBudgetWarningInfoByIds">
        update t_budget_warning_info
        set del_flag = '2' , update_by = #{userName}, update_time = SYSDATE()
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>