<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.cmkj.budget.mapper.BudgetAdjustmentMapper">

    <resultMap type="BudgetAdjustment" id="BudgetAdjustmentResult">
        <result property="id"    column="id"    />
        <result property="budgetYear"    column="budget_year"    />
        <result property="subjectId"    column="subject_id"    />
        <result property="itemId"    column="item_id"    />
        <result property="outDept"    column="out_dept"    />
        <result property="inDept"    column="in_dept"    />
        <result property="amount"    column="amount"    />
        <result property="number"    column="number"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectBudgetAdjustmentVo">
        SELECT t.id,t.budget_year,t.subject_id,t.item_id,t.out_dept,t.in_dept,t.amount,t.number,t.remark,t.create_by,t.create_time,t.update_by,t.update_time,t.del_flag,CONCAT(od.dept_name, '-', pod.dept_name) as outDeptName,CONCAT(id.dept_name, '-', pid.dept_name) as inDeptName,bs.`name` as subjectName
        FROM  t_budget_adjustment t
          LEFT JOIN t_budget_subject bs on t.subject_id = bs.id
          LEFT JOIN sys_dept od on t.out_dept = od.dept_id
          LEFT JOIN sys_dept pod on pod.dept_id = od.parent_id
          LEFT JOIN sys_dept id on t.in_dept = id.dept_id
          LEFT JOIN sys_dept pid on pid.dept_id = id.parent_id
    </sql>

    <select id="selectBudgetAdjustmentList" parameterType="BudgetAdjustment" resultMap="BudgetAdjustmentResult">
        <include refid="selectBudgetAdjustmentVo"/>
            where t.del_flag = '0'
            <if test="budgetYear != null "> and t.budget_year = #{budgetYear}</if>
            <if test="subjectId != null "> and t.subject_id = #{subjectId}</if>
            <if test="itemId != null "> and t.item_id = #{itemId}</if>
            <if test="outDept != null "> and t.out_dept = #{outDept}</if>
            <if test="inDept != null "> and t.in_dept = #{inDept}</if>
            <if test="amount != null "> and t.amount = #{amount}</if>
            <if test="number != null  and number != ''"> and t.number like concat('%', #{number}, '%')</if>
    </select>

    <select id="selectBudgetAdjustmentById" parameterType="Long" resultMap="BudgetAdjustmentResult">
        <include refid="selectBudgetAdjustmentVo"/>
        where t.id = #{id}
    </select>

    <insert id="insertBudgetAdjustment" parameterType="BudgetAdjustment" useGeneratedKeys="true" keyProperty="id">
        insert into t_budget_adjustment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="budgetYear != null">budget_year,</if>
            <if test="subjectId != null">subject_id,</if>
            <if test="itemId != null">item_id,</if>
            <if test="outDept != null">out_dept,</if>
            <if test="inDept != null">in_dept,</if>
            <if test="amount != null">amount,</if>
            <if test="number != null">number,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="budgetYear != null">#{budgetYear},</if>
            <if test="subjectId != null">#{subjectId},</if>
            <if test="itemId != null">#{itemId},</if>
            <if test="outDept != null">#{outDept},</if>
            <if test="inDept != null">#{inDept},</if>
            <if test="amount != null">#{amount},</if>
            <if test="number != null">#{number},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
        </trim>
    </insert>

    <update id="updateBudgetAdjustment" parameterType="BudgetAdjustment">
        update t_budget_adjustment
        <trim prefix="SET" suffixOverrides=",">
            <if test="budgetYear != null">budget_year = #{budgetYear},</if>
            <if test="subjectId != null">subject_id = #{subjectId},</if>
            <if test="itemId != null">item_id = #{itemId},</if>
            <if test="outDept != null">out_dept = #{outDept},</if>
            <if test="inDept != null">in_dept = #{inDept},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="number != null">number = #{number},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBudgetAdjustmentById">
        update t_budget_adjustment
        set del_flag = '2' , update_by = #{userName}, update_time = SYSDATE()
        where id = #{id}
    </delete>

    <delete id="deleteBudgetAdjustmentByIds">
        update t_budget_adjustment
        set del_flag = '2' , update_by = #{userName}, update_time = SYSDATE()
        where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>